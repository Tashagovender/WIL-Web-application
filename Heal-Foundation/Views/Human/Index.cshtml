<!-- Include Chart.js library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- JavaScript for the animated pie chart -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('fundsPieChart').getContext('2d');

        const fundsPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                datasets: [{
                    data: [100, 0],
                    backgroundColor: ['#74A04E', '#e0e0e0'],
                    borderWidth: 0
                }]
            },
            options: {
                cutout: '70%',
                responsive: true,
                plugins: {
                    tooltip: {
                        enabled: false
                    }
                }
            }
        });

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    let progress = 0;
                    const animation = setInterval(() => {
                        if (progress < 100) {
                            fundsPieChart.data.datasets[0].data = [progress, 100 - progress];
                            fundsPieChart.update();
                            progress += 2;
                        } else {
                            clearInterval(animation);
                        }
                    }, 10);
                    observer.unobserve(entry.target);
                }
            });
        });

        observer.observe(document.getElementById('fundsPieChart'));
    });
</script>





