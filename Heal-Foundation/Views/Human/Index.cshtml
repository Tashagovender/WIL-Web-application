<!-- Heading Above the Hero Section -->
<div class="container text-center mt-4">
    <h1 class="display-4 font-weight-bold">Every day is a new day to make a difference, join us!</h1>
</div>

<!-- Full-screen Hero Section with Hover Effect -->
