@{
	ViewData["Title"] = "About Page";
}


<div class="text-center">
	<h1 class="display-4" style="font-size: 3rem; font-family: 'Arial', sans-serif;">HealFoundation</h1>
</div>

<div class="text-center">
	<h1 class="display-5" style="font-size: 1.5rem;">The Foundation was launched in January 2020 and is managed by a Board of Directors with the emphasis on the younger generation to be groomed as leaders of tomorrow and be directly involved in finding solutions to pertinent issues we currently face.</h1>
</div>
<!-- team -->
<section class="w3l-team-main py-5" id="team">
	<div class="container py-lg-4">
		<div class="title-content text-center mb-lg-5 mb-4">
			<h3 class="hny-title">Board Of Directors</h3>
		</div>
		<div class="row inner-sec-w3layouts-w3pvt-lauinfo">
			<div class="col-md-4 col-6">
				<div class="team-grids text-center">
					<div class="team-image-wrapper">
						<img src="/images/directorone.jpg" class="img-fluid" alt="">
						<div class="team-info">
							<div class="caption">
								<h4>Divesh Cassiram</h4>
								<h6>Director/ President</h6>
								<p>Sits at the helm of this nonprofit organization, steering it, managing its operations, and carrying out its mission according with the goal of doing good in the world. </p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-6">
				<div class="team-grids text-center">
					<div class="team-image-wrapper">
						<img src="/images/directortwo.jpg" class="img-fluid" alt="">
						<div class="team-info">
							<div class="caption">
								<h4>Akshay Singh</h4>
								<h6>Deputy</h6>
								<p style="color:white">Supports the vision and mission of the HEAL organization ensuring oversight of the projects and that the foundation is operationally sound</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-6">
				<div class="team-grids text-center">
					<div class="team-image-wrapper">
						<img src="/images/directorthree.jpg" class="img-fluid" alt="">
						<div class="team-info">
							<div class="caption">
								<h4>Kamal Cassiram</h4>
								<h6>Secretary</h6>
								<p style="color:white">Ensures that the organization runs effectively and efficiently, driven by his passion for humanitarian work</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Footer Section -->
<footer class="footer-section" style="background-color: #74A04E; padding: 50px 0;">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<h2 class="footer-heading mb-4">Our Heal Family</h2>
			</div>
			<div class="col-md-12 text-center">
				<!-- Heal Team Images -->
				<img src="~/images/HealOne.jpg" alt="Heal Team Member 1" class="team-image">
				<img src="~/images/HealTwo.jpg" alt="Heal Team Member 2" class="team-image">
			</div>
		</div>
	</div>
</footer>

<section  style="text-align: center; padding: 50px 0;">
	
	<div class="vision-content">
		<h2 class="text-center mb-4">HealFoundation's Vision</h2>
		<p class="text-center">To promote the upliftment, welfare and sustainability of the environment and all living beings, thereby ensuring a more harmonious and prosperous society.</p>
	</div>
	
	<img src="~/images/heallogo.png" alt="Heallogo" class="circle-logo">
	
</section>

<section class="logo-section" style="text-align: center; padding: 50px 0;">
	<div class="vision-content">
		<h2 class="text-center mb-4">HealFoundation's Mission</h2>
		<p class="text-center">
			To provide sustainable activities in the pursuance of the core mandate of the HEAL Foundation, that are delivered compassionately and efficiently, never compromising on values and needs of society, in a fair and impartial manner.


			So far, we've supported thousands through feeding schemes, hamper drives, humanitarian work, environmental rehabilitation, and animal welfare projects. We aim to expand these initiatives and with your generous support, whether financial or through volunteering, we can continue serving communities. Find details of all our projects under the 'Projects' tab, and with your generosity, we can further our vision and make a real difference to so many lives.
		</p>
	</div>

	<img src="~/images/Mission.png" alt="Heal logo" class="circle-logo">
</section>





<!-- CSS -->
<style>
	.circle-logo {
		width: 150px; /* Adjust size as needed */
		height: 150px; /* Adjust size as needed */
		border-radius: 50%;
		object-fit: cover; /* Ensure the logo fits within the circle */
	}

	.vision-content {
		margin-bottom: 20px; /* Adjust spacing between Vision content and logo */
	}

	footer-section {
		background-color: #74A04E;
		padding: 50px 0;
	}

	.footer-heading {
		color: white;
		margin-bottom: 20px;
	}

	.team-image {
		width: 200px; /* Adjust size as needed */
		height: 200px; /* Adjust size as needed */
		border-radius: 50%;
		object-fit: cover; /* Ensure the images fit within the circle */
		margin: 0 10px; /* Adjust spacing between images */
	}

	.custom-green-link {
		background-color: #74A04E; /* Custom green color */
		border-color: #74A04E; /* Custom green border color */
		color: white; /* Text color */
		padding: 0.375rem 0.75rem; /* Button padding */
		font-size: 1rem; /* Button font size */
		border-radius: 0.25rem; /* Button border radius */
		text-align: center; /* Center text */
		display: inline-block; /* Inline block display */
		text-decoration: none; /* Remove underline */
	}

		.custom-green-link:hover {
			background-color: #74A04E; /* Darker green on hover */
			border-color: #74A04E; /* Darker green border on hover */
			color: white; /* Ensure text color stays white */
		}

	
	


</style>


